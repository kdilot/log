{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./build",
    "baseUrl": "./src",
    "paths": {
      "@icons/*": ["assets/icons/*"],
      "@helpers/*": ["helpers/*"],
      "@styles/*": ["styles/*"],
      "@constants/*": ["constants/*"],
      "@components/*": ["components/*"]
    },
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "noImplicitAny": false
  },
  "exclude": ["**/*.stories.tsx"]
}
